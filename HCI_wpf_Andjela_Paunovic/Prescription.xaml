<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_wpf_Andjela_Paunovic"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="HCI_wpf_Andjela_Paunovic.Prescription"
        mc:Ignorable="d"
        Height="600" Width="430" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <materialDesign:PackIcon MouseDown="PackIcon_MouseDown" Kind="ArrowBack" Foreground="DimGray" Width="38" Height="38" VerticalAlignment="Center"/>

        <Label FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="50 70 50 30">Choose:</Label>
        <Button Click="prescribeMedication"  Width="280" Height="50" Foreground="White" Background="DimGray" FontSize="23" FontWeight="Bold" Margin="7">Prescribe medicine</Button>
        <Button Click="Button_Click"  Width="280" Height="50" Foreground="White" Background="DimGray" FontSize="23" FontWeight="Bold" Margin="7">Prescription form</Button>
        <Button Click="Button_Click_1" Width="280" Height="50" Foreground="White" Background="DimGray" FontSize="23" FontWeight="Bold" Margin="7">Report form</Button>
        
    </StackPanel>       

    
</Window>
